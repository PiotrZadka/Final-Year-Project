<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textAlignment="center"
    tools:context=".main_content">

    <ImageView
        android:id="@+id/chatImage"
        android:layout_width="132dp"
        android:layout_height="133dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="233dp"
        android:layout_marginTop="299dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="293dp"
        app:srcCompat="@drawable/chat" />

    <ImageView
        android:id="@+id/userProfileImage"
        android:layout_width="132dp"
        android:layout_height="133dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="102dp"
        android:layout_marginEnd="227dp"
        android:layout_marginBottom="491dp"
        app:srcCompat="@drawable/profile" />

    <ImageView
        android:id="@+id/usersProfilesImage"
        android:layout_width="132dp"
        android:layout_height="133dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="296dp"
        android:layout_marginEnd="224dp"
        android:layout_marginBottom="296dp"
        app:srcCompat="@drawable/users" />

    <ImageView
        android:id="@+id/gameListImage"
        android:layout_width="132dp"
        android:layout_height="133dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="240dp"
        android:layout_marginTop="102dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="488dp"
        app:srcCompat="@drawable/gameicon" />

    <Button
        android:id="@+id/logout_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="160dp"
        android:layout_marginTop="596dp"
        android:layout_marginEnd="160dp"
        android:text="Logout" />

    <TextView
        android:id="@+id/welcomeLabel"
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="141dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="139dp"
        android:text="Welcome"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/userWelcomeLabel"
        android:layout_width="169dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/welcomeLabel"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="127dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="125dp"
        android:gravity="center"
        android:text="username"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/profileLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/userProfileImage"
        android:layout_alignEnd="@+id/userProfileImage"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="258dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="449dp"
        android:gravity="center"
        android:text="Profile"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/usersLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/userProfileImage"
        android:layout_alignEnd="@+id/userProfileImage"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="456dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="251dp"
        android:gravity="center"
        android:text="Users"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/usersLabel2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/chatImage"
        android:layout_alignEnd="@+id/chatImage"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="456dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="251dp"
        android:gravity="center"
        android:text="Chat"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/gameListLabel"
        android:layout_width="92dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/gameListImage"
        android:layout_alignEnd="@+id/gameListImage"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="259dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="448dp"
        android:gravity="center"
        android:text="Game List"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/registeredUsers"
        android:layout_width="136dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="540dp"
        android:layout_marginEnd="228dp"
        android:text="Registered Users:" />

    <TextView
        android:id="@+id/annotation"
        android:layout_width="346dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="655dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="40dp"
        android:text="Games database provided by TheGamesDB.net - an open, online database for video game fans." />

    <TextView
        android:id="@+id/hyperlinkDB"
        android:layout_width="346dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="700dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="10dp"
        android:text="http://thegamesdb.net" />

    <TextView
        android:id="@+id/totalGamesinDB"
        android:layout_width="174dp"
        android:layout_height="23dp"
        android:layout_below="@+id/registeredUsers"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="191dp"
        android:text="Total Games in Database:" />

</RelativeLayout>